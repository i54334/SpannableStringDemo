<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.baoyachi.spannablestringdemo.MainActivity">

        <TextView
            android:id="@+id/tv_foreground_color_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_background_color_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_relative_size_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_strikethrough_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_underline_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_superscript_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_subscript_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_style_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_image_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_clickable_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_url_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFff99"
            android:gravity="center"
            android:padding="8dp"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>